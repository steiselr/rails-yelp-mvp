<h1> Add a new restaurant </h1>

<%= simple_form_for(@restaurant) do |f| %>
<%= f.error_notification %>

<div class="form-group"><%= f.input :name %></div>
<div class="form-group"><%= f.input :address %></div>
<div class="form-group"><%= f.input :phone_number %></div>
<div class="form-group"><%= f.input :category, collection: ["Chinese", "Italian", "Japanese", "French", "Belgian"], prompt: "Category" %></div>

<%= f.submit %>
<% end %>
